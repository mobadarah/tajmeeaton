CACHE_DIR          = os.path.join(__dirname__, ".cache")
NOTION_API_VERSION = "2021-05-13"
NOTION_API_URL     = "https://api.notion.com/v1"
NOTION_PAGE_ID     = "3f677c2054ee49efad36e321cd88e1ac"
